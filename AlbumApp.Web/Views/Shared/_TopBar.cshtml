<div class="navbar navbar-fixed-top">
    <div class="navbar-inner">
        <div class="container">
          <ul class="nav nav-pills pull-right">
            <li class="@if (ViewBag.Name == "Home")
                    {<text>active</text>}"><a href="@Url.Action("Index", "Home")">Home</a></li>
            <li class="dropdown @if (ViewBag.Name == "Login")
                    {<text>active</text>}">
              @if (!Request.IsAuthenticated)
              {
                <a href="" class="dropdown-toggle" data-toggle="dropdown">Not Logged In</a>
                        <ul class="dropdown-menu" role="menu" aria-labelledby="dLabel">
                          <li><a href="@Url.Action("Login", "Account")">Login</a></li>
                          <li><a href="@Url.Action("Register", "Account")">Register</a></li>
                          <li class="divider"></li>
                          <li><a href="@Url.Action("ToBeImplemented", "Home")">Forgot Password</a></li> @*"ForgotPassword", "Account"*@
                        </ul>
              }
              else
              {
                <a href="" class="dropdown-toggle" data-toggle="dropdown">@User.Identity.Name</a>
                        <ul class="dropdown-menu" role="menu" aria-labelledby="dLabel">
                          <li><a href="@Url.Action("ToBeImplemented", "Home")">My Account</a></li>  @*"MyAccount", "Customer"*@
                          <li class="divider"></li>
                          <li><a href="@Url.Action("ToBeImplemented", "Home")">Change Password</a></li> @*"ChangePassword", "Account"*@
                          <li><a href="@Url.Action("Logout", "Account")">Log Out</a></li>
                        </ul>
              }
            </li>
            @if (Request.IsAuthenticated)
            {
              <li class="dropdown @if (ViewBag.Name == "CustomerActions")
                        {<text>active</text>}">
                <a href="" class="dropdown-toggle" data-toggle="dropdown">Customer Actions</a>
                <ul class="dropdown-menu" role="menu" aria-labelledby="dLabel">
                  <li><a href="@Url.Action("Index", "Cart")">Place an Order</a></li>
                  <li><a href="@Url.Action("ToBeImplemented", "Home")">Current Orders</a></li>@*"CurrentOrders", "Customer"*@
                  <li><a href="@Url.Action("ToBeImplemented", "Home")">My Order History</a></li>@*"OrderHistory", "Customer"*@
                </ul>
              </li>
              <li>
                <a href="@Url.Action("Index", "Cart")" class="btn button-cart" style="border-radius:5px">
                  <span class="fa fa-shopping-cart" style="font-size:large;color:darkcyan"> Cart 
                    <span class="cart-number">&nbsp;@Session["cart"]&nbsp;</span>
                  </span>
                </a>
              </li>
            }            
          </ul>

        </div>
    </div>
</div>