<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title - Album Music</title>
    <link href="~/Content/loading-placeholder.css" rel="stylesheet" />
    <link href="~/Content/Layout.css" rel="stylesheet" />

    @Styles.Render("~/Content/css")
</head>
<body> 
  @Html.Partial("~/Views/Shared/_TopBar.cshtml")
  <div class="wrapper">
    <div class="container" style="padding-top: 15px;">
      <div class="content-wrapper main-content clear-fix">
        <div style="margin-top: 35px;">
          <a href="@Url.Action("Index", "Home")">
            <img src="@Url.Content("~/Content/images/AlbumMusicLogo.png")"
                 style="margin-top: 30px; width: 320px; height: 80px;" />
          </a>
        </div>
        <section id="mainbody">
          @RenderBody()
        </section>
      </div>
    </div>
    <div class="push"></div>
  </div>
  @Html.Partial("~/Views/Shared/_BottomBar.cshtml")

  <script type="text/javascript">
    window.AlbumApp = {};
    (function (aa) {
      var rootPath;
      aa.rootPath = rootPath;
    }(window.AlbumApp));
    AlbumApp.rootPath = '@Url.Content("~")';
  </script>

  <script src="~/Scripts/moment.min.js"></script>
  <script src="~/Scripts/angular.min.js"></script>
  <script src="~/Scripts/angular-route.min.js"></script>
  <script src="~/Scripts/angular-animate.min.js"></script>

  @Scripts.Render("~/bundles/modernizr")
  @Scripts.Render("~/bundles/jquery")
  @Scripts.Render("~/bundles/bootstrap")

  <script src="~/Scripts/angular-ui/ui-bootstrap-tpls.js"></script>
  <script src="@Url.Content("~/Scripts/App.js")" type="text/javascript"></script>

  @RenderSection("scripts", required: false)
  <script type="text/javascript">
    @RenderSection("footerScript", required: false)
  </script>
</body>
</html>
